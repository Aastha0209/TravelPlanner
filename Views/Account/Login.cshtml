@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="text-center mb-4">
            <i class="bi bi-globe2 text-primary" style="font-size: 3rem;"></i>
            <h2 class="fw-bold text-primary mt-2">Welcome Back</h2>
            <p class="text-muted mb-0">Login to your Travel Planner</p>
        </div>

        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email" required />
                <div class="invalid-feedback">Please enter a valid email.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter your password" required />
                <div class="invalid-feedback">Please enter your password.</div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger py-2">@ViewBag.Error</div>
            }

            <button type="submit" class="btn btn-primary w-100 btn-lg shadow-sm mt-2">Login</button>
        </form>

        <div class="text-center mt-4">
            <p class="mb-0 text-muted">Donâ€™t have an account? 
                <a href="/Account/Register" class="fw-semibold text-decoration-none text-primary">Register</a>
            </p>
        </div>
    </div>
</div>

<!-- Optional CSS to enhance visuals -->
<style>
    body {
        background: linear-gradient(135deg, #d0e8ff, #f0f7ff);
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background-color: #ffffffcc;
        backdrop-filter: blur(10px);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.03);
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
    }
</style>
