@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 460px; width: 100%;">
        <div class="text-center mb-4">
            <i class="bi bi-airplane-engines text-success" style="font-size: 3rem;"></i>
            <h2 class="fw-bold text-success mt-2">Create Account</h2>
            <p class="text-muted mb-0">Start planning your next adventure!</p>
        </div>

        <form asp-action="Register" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label fw-semibold">Full Name</label>
                <input type="text" name="Name" class="form-control form-control-lg" placeholder="Enter your name" required />
                <div class="invalid-feedback">Please enter your name.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" name="Email" class="form-control form-control-lg" placeholder="Enter your email" required />
                <div class="invalid-feedback">Please enter a valid email.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password" name="PasswordHash" class="form-control form-control-lg" placeholder="Enter your password" required />
                <div class="invalid-feedback">Please enter your password.</div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger py-2">@ViewBag.Error</div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success py-2">@ViewBag.Message</div>
            }

            <button type="submit" class="btn btn-success w-100 btn-lg shadow-sm mt-2">Register</button>
        </form>

        <div class="text-center mt-4">
            <p class="mb-0 text-muted">Already have an account? 
                <a href="/Account/Login" class="fw-semibold text-decoration-none text-success">Login here</a>
            </p>
        </div>
    </div>
</div>

<!-- Optional custom styling -->
<style>
    body {
        background: linear-gradient(135deg, #d4f1f9, #e8fff1);
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background-color: #ffffffcc;
        backdrop-filter: blur(10px);
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background-color: #1f8b37;
        transform: scale(1.03);
    }

    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.4);
    }
</style>
