@model TravelPlanner.Models.User
@{
    ViewData["Title"] = "Profile";
}

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 p-4 profile-card">
                <div class="text-center mb-4">
                    <div class="profile-avatar mb-3 mx-auto">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                        {
                            <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle shadow-sm" width="120" height="120" />
                        }
                        else
                        {
                            <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
                        }
                    </div>
                    <h2 class="fw-bold text-primary mb-1">üë§ Your Profile</h2>
                    <p class="text-muted">Manage your account information and profile picture</p>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success text-center rounded-pill">@ViewBag.Message</div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger text-center rounded-pill">@ViewBag.Error</div>
                }

                <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data" class="fade-in">
                    @Html.AntiForgeryToken()

                    <div class="mb-3 text-center">
                        <label class="form-label fw-semibold">Profile Picture</label>
                        <input type="file" name="ProfilePicture" accept="image/*" class="form-control form-control-sm rounded-pill shadow-sm w-75 mx-auto" />
                        <small class="text-muted">Upload JPG, PNG up to 2MB</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Name</label>
                        <input type="text" name="Name" class="form-control rounded-pill shadow-sm" value="@Model.Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" name="Email" class="form-control rounded-pill shadow-sm" value="@Model.Email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Password</label>
                        <input type="password" name="Password" class="form-control rounded-pill shadow-sm" placeholder="Leave blank to keep current password" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-gradient px-5 mt-3 rounded-pill">üíæ Update Profile</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Dashboard" class="btn btn-outline-secondary btn-sm rounded-pill">‚Üê Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #ffffff);
        font-family: "Poppins", sans-serif;
    }

    .profile-card {
        background: #ffffff;
        border-radius: 25px;
        transition: all 0.4s ease;
    }

    .profile-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .profile-avatar img {
        border: 4px solid #4facfe;
        object-fit: cover;
    }

    .profile-avatar {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .btn-gradient {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .fade-in {
        animation: fadeInUp 0.6s ease forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
