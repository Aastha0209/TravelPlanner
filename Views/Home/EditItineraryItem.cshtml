@model TravelPlanner.Models.Itinerary
@{
    ViewData["Title"] = "Edit Itinerary Item";
}

<div class="container py-5">
    <h2 class="mb-4 text-primary">Edit Item</h2>
    <a asp-controller="Home" asp-action="Itinerary" asp-route-id="@Model.TripId" class="btn btn-secondary mb-4">
    ‚Üê Back to Trip
</a>


    <div class="card p-4 shadow-sm bg-light rounded">
        <form asp-action="EditItineraryItem" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ItineraryId" />
            <input type="hidden" asp-for="TripId" />

            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Type</label>
                    <select asp-for="Type" class="form-select" required>
                        @{
                            var types = new[] { "Place", "Activity", "Restaurant" };
                        }
                        @foreach (var type in types)
                        {
                            if (type == Model.Type)
                            {
                                <option value="@type" selected>@type</option>
                            }
                            else
                            {
                                <option value="@type">@type</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
